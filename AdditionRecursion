package recursion;

import java.util.Scanner;

public class AdditionRecursion {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner scn=new Scanner(System.in);
		int num=scn.nextInt();
		System.out.println(recursiveAddition(num));

	}
	
	public static int recursiveAddition(int num){
		if(num==0)
			return 0;
		else if(num==1)
			return 1;
		else
			return num+recursiveAddition(num-1);
	}

}
